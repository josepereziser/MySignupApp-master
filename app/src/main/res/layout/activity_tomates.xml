<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:background="@drawable/tomate"
            android:layout_marginTop="20dp" android:layout_marginStart="30dp"
            tools:targetApi="m"/>

    <TextView
            android:layout_width="400dp"
            android:layout_height="400dp"
            android:layout_marginTop="200dp" android:layout_marginStart="10dp"
            android:text="la temperatura del tomate es entre 20 y 25 ºC durante
            el día y entre los 15 y 18 ºC durante la noche. Es una planta que
            requiere una variación entre la temperatura diurna y nocturna de
            aproximadamente 6 a 7 ºC"
            android:textSize="28dp"
    />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/socialicons"
        android:layout_alignParentBottom="true">
        <com.google.android.material.button.MaterialButton
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:id="@+id/signupbtn"
                android:text="atras"
                android:textSize="30dp"
                android:backgroundTint="@color/design_default_color_secondary"
                android:layout_marginTop="400dp" android:layout_marginStart="500dp"
                android:layout_marginEnd="100dp" android:layout_marginBottom="100dp"/>

    </LinearLayout>

</RelativeLayout>